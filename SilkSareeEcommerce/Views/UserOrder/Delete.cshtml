@model SilkSareeEcommerce.Models.Order

<div class="container mt-4">
    <div class="card shadow-lg border-0">
        <div class="card-header bg-danger text-white text-center">
            <h2 class="mb-0">⚠️ Delete Order</h2>
        </div>
        <div class="card-body text-center">
            <p>Are you sure you want to delete this order?</p>
            <p><strong>Order ID:</strong> ORD-@Model.Id</p>
            <p><strong>Total Amount:</strong> ₹@Model.TotalAmount</p>

            <form asp-action="DeleteConfirmed" method="post">
                <input type="hidden" asp-for="Id" />
                <button type="submit" class="btn btn-danger"><i class="fas fa-trash"></i> Yes, Delete</button>
                <a asp-action="Index" class="btn btn-secondary">Cancel</a>
            </form>
        </div>
    </div>
</div>
