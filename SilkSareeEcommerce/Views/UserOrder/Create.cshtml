@model SilkSareeEcommerce.Models.Order

<div class="container mt-4">
    <div class="card shadow-lg border-0">
        <div class="card-header bg-dark text-white text-center">
            <h2 class="mb-0">📝 Create New Order</h2>
        </div>
        <div class="card-body">
            <form asp-action="Create" method="post">
                <div class="mb-3">
                    <label class="form-label">Total Amount</label>
                    <input asp-for="TotalAmount" class="form-control" required />
                </div>
                <div class="mb-3">
                    <label class="form-label">Status</label>
                    <select asp-for="Status" class="form-select">
                        <option value="Pending">Pending</option>
                        <option value="Completed">Completed</option>
                    </select>
                </div>

                <button type="submit" class="btn btn-success"><i class="fas fa-save"></i> Save Order</button>
                <a asp-action="Index" class="btn btn-secondary">Cancel</a>
            </form>
        </div>
    </div>
</div>
