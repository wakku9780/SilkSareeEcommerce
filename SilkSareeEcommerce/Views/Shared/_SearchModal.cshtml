<!-- Search Modal -->
<div id="search-modal" class="fixed inset-0 z-50 hidden">
    <div class="absolute inset-0 bg-black bg-opacity-50 transition-opacity duration-300"></div>
    
    <div class="relative min-h-screen flex items-start justify-center p-4">
        <div class="relative bg-white w-full max-w-2xl mt-20 rounded-lg shadow-xl">
            <!-- Search Header -->
            <div class="flex items-center justify-between p-6 border-b border-gray-200">
                <h2 class="text-xl font-semibold text-gray-900">Search Products</h2>
                <button onclick="closeSearchModal()" 
                        class="text-gray-400 hover:text-gray-600 transition-colors duration-200"
                        aria-label="Close search">
                    <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"/>
                    </svg>
                </button>
            </div>
            
            <!-- Search Input -->
            <div class="p-6">
                <div class="relative">
                    <input type="text" 
                           id="search-input"
                           placeholder="Search for sarees, categories, or designers..."
                           class="w-full px-4 py-3 pl-12 text-lg border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-luxury-500 focus:border-transparent"
                           autocomplete="off">
                    <svg class="absolute left-4 top-1/2 transform -translate-y-1/2 w-5 h-5 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z"/>
                    </svg>
                </div>
                
                <!-- Search Suggestions -->
                <div id="search-suggestions" class="mt-4 space-y-2 hidden">
                    <div class="text-sm text-gray-500 mb-2">Popular searches:</div>
                    <div class="flex flex-wrap gap-2">
                        <button onclick="searchFor('Silk Sarees')" class="px-3 py-1 bg-gray-100 hover:bg-luxury-100 text-gray-700 rounded-full text-sm transition-colors duration-200">Silk Sarees</button>
                        <button onclick="searchFor('Wedding Sarees')" class="px-3 py-1 bg-gray-100 hover:bg-luxury-100 text-gray-700 rounded-full text-sm transition-colors duration-200">Wedding Sarees</button>
                        <button onclick="searchFor('Designer Sarees')" class="px-3 py-1 bg-gray-100 hover:bg-luxury-100 text-gray-700 rounded-full text-sm transition-colors duration-200">Designer Sarees</button>
                        <button onclick="searchFor('Traditional Sarees')" class="px-3 py-1 bg-gray-100 hover:bg-luxury-100 text-gray-700 rounded-full text-sm transition-colors duration-200">Traditional Sarees</button>
                    </div>
                </div>
                
                <!-- Search Results -->
                <div id="search-results" class="mt-6 hidden">
                    <div class="text-sm text-gray-500 mb-3">Search results for "<span id="search-query"></span>"</div>
                    <div class="space-y-3">
                        <!-- Sample search result -->
                        <div class="flex items-center space-x-3 p-3 hover:bg-gray-50 rounded-lg transition-colors duration-200">
                            <img src="/images/sample-saree.jpg" alt="Silk Saree" class="w-12 h-12 object-cover rounded-md">
                            <div class="flex-1">
                                <h4 class="text-sm font-medium text-gray-900">Elegant Silk Saree</h4>
                                <p class="text-xs text-gray-500">â‚¹2,999</p>
                            </div>
                            <button class="text-luxury-600 hover:text-luxury-700 text-sm font-medium">View</button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<script>
    // Search functionality
    document.addEventListener('search-open', function() {
        openSearchModal();
    });

    function openSearchModal() {
        const modal = document.getElementById('search-modal');
        const input = document.getElementById('search-input');
        
        modal.classList.remove('hidden');
        input.focus();
        
        // Show suggestions
        document.getElementById('search-suggestions').classList.remove('hidden');
    }

    function closeSearchModal() {
        const modal = document.getElementById('search-modal');
        modal.classList.add('hidden');
        
        // Clear search
        document.getElementById('search-input').value = '';
        document.getElementById('search-suggestions').classList.add('hidden');
        document.getElementById('search-results').classList.add('hidden');
    }

    function searchFor(query) {
        const input = document.getElementById('search-input');
        input.value = query;
        
        // Simulate search
        performSearch(query);
    }

    function performSearch(query) {
        // Hide suggestions, show results
        document.getElementById('search-suggestions').classList.add('hidden');
        document.getElementById('search-query').textContent = query;
        document.getElementById('search-results').classList.remove('hidden');
        
        // In a real app, this would make an API call
        console.log('Searching for:', query);
    }

    // Close modal when clicking outside
    document.getElementById('search-modal').addEventListener('click', function(event) {
        if (event.target === this) {
            closeSearchModal();
        }
    });

    // Handle Enter key in search input
    document.getElementById('search-input').addEventListener('keypress', function(event) {
        if (event.key === 'Enter') {
            const query = this.value.trim();
            if (query) {
                performSearch(query);
            }
        }
    });
</script>
