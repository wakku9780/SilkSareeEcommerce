<!-- Cart Drawer -->
<div x-show="cartOpen" 
     x-transition:enter="transition ease-in-out duration-300"
     x-transition:enter-start="translate-x-full"
     x-transition:enter-end="translate-x-0"
     x-transition:leave="transition ease-in-out duration-300"
     x-transition:leave-start="translate-x-0"
     x-transition:leave-end="translate-x-full"
     class="fixed inset-y-0 right-0 z-50 w-full max-w-md bg-white shadow-xl"
     style="display: none;">
    
    <!-- Cart Header -->
    <div class="flex items-center justify-between p-6 border-b border-gray-200">
        <h2 class="text-lg font-semibold text-gray-900">Shopping Cart</h2>
        <button @click="cartOpen = false" 
                class="text-gray-400 hover:text-gray-600 transition-colors duration-200"
                aria-label="Close cart">
            <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"/>
            </svg>
        </button>
    </div>

    <!-- Cart Content -->
    <div class="flex-1 overflow-y-auto p-6">
        <!-- Empty Cart State -->
        <div x-show="!cartItems || cartItems.length === 0" class="text-center py-12">
            <svg class="mx-auto h-12 w-12 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 3h2l.4 2M7 13h10l4-8H5.4m0 0L7 13m0 0l-2.5 5M7 13l2.5 5m6-5v6a2 2 0 01-2 2H9a2 2 0 01-2-2v-6m8 0V9a2 2 0 00-2-2H9a2 2 0 00-2 2v4.01"/>
            </svg>
            <h3 class="mt-2 text-sm font-medium text-gray-900">Your cart is empty</h3>
            <p class="mt-1 text-sm text-gray-500">Start shopping to add items to your cart.</p>
            <div class="mt-6">
                <a asp-controller="Product" asp-action="Index" 
                   @click="cartOpen = false"
                   class="inline-flex items-center px-4 py-2 border border-transparent shadow-sm text-sm font-medium rounded-md text-white bg-luxury-600 hover:bg-luxury-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-luxury-500 transition-colors duration-200">
                    Start Shopping
                </a>
            </div>
        </div>

        <!-- Cart Items -->
        <div x-show="cartItems && cartItems.length > 0" class="space-y-4">
            <!-- Sample Cart Item -->
            <div class="flex items-center space-x-4 p-4 bg-gray-50 rounded-lg">
                <img src="/images/sample-saree.jpg" alt="Silk Saree" class="w-16 h-16 object-cover rounded-md">
                <div class="flex-1 min-w-0">
                    <h4 class="text-sm font-medium text-gray-900 truncate">Elegant Silk Saree</h4>
                    <p class="text-sm text-gray-500">Size: Free Size</p>
                    <p class="text-sm font-medium text-luxury-600">₹2,999</p>
                </div>
                <div class="flex items-center space-x-2">
                    <button class="w-8 h-8 rounded-full border border-gray-300 flex items-center justify-center text-gray-600 hover:bg-gray-100 transition-colors duration-200">
                        <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M20 12H4"/>
                        </svg>
                    </button>
                    <span class="w-8 text-center text-sm font-medium">1</span>
                    <button class="w-8 h-8 rounded-full border border-gray-300 flex items-center justify-center text-gray-600 hover:bg-gray-100 transition-colors duration-200">
                        <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4"/>
                        </svg>
                    </button>
                </div>
                <button class="text-gray-400 hover:text-red-500 transition-colors duration-200">
                    <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16"/>
                    </svg>
                </button>
            </div>

            <!-- Another Sample Item -->
            <div class="flex items-center space-x-4 p-4 bg-gray-50 rounded-lg">
                <img src="/images/sample-saree-2.jpg" alt="Designer Saree" class="w-16 h-16 object-cover rounded-md">
                <div class="flex-1 min-w-0">
                    <h4 class="text-sm font-medium text-gray-900 truncate">Designer Wedding Saree</h4>
                    <p class="text-sm text-gray-500">Size: Free Size</p>
                    <p class="text-sm font-medium text-luxury-600">₹5,999</p>
                </div>
                <div class="flex items-center space-x-2">
                    <button class="w-8 h-8 rounded-full border border-gray-300 flex items-center justify-center text-gray-600 hover:bg-gray-100 transition-colors duration-200">
                        <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M20 12H4"/>
                        </svg>
                    </button>
                    <span class="w-8 text-center text-sm font-medium">1</span>
                    <button class="w-8 h-8 rounded-full border border-gray-300 flex items-center justify-center text-gray-600 hover:bg-gray-100 transition-colors duration-200">
                        <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4"/>
                        </svg>
                    </button>
                </div>
                <button class="text-gray-400 hover:text-red-500 transition-colors duration-200">
                    <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16"/>
                    </svg>
                </button>
            </div>
        </div>
    </div>

    <!-- Cart Footer -->
    <div x-show="cartItems && cartItems.length > 0" class="border-t border-gray-200 p-6">
        <!-- Subtotal -->
        <div class="flex justify-between text-base font-medium text-gray-900 mb-4">
            <span>Subtotal</span>
            <span>₹8,998</span>
        </div>
        
        <!-- Shipping Info -->
        <p class="text-sm text-gray-500 mb-6">Shipping and taxes will be calculated at checkout.</p>
        
        <!-- Action Buttons -->
        <div class="space-y-3">
            <a asp-controller="Order" asp-action="Checkout" 
               @click="cartOpen = false"
               class="w-full flex justify-center items-center px-6 py-3 border border-transparent rounded-md shadow-sm text-base font-medium text-white bg-luxury-600 hover:bg-luxury-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-luxury-500 transition-colors duration-200">
                Proceed to Checkout
            </a>
            <button @click="cartOpen = false"
                    class="w-full flex justify-center items-center px-6 py-3 border border-gray-300 rounded-md shadow-sm text-base font-medium text-gray-700 bg-white hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-luxury-500 transition-colors duration-200">
                Continue Shopping
            </button>
        </div>
    </div>
</div>

<!-- Cart Overlay -->
<div x-show="cartOpen" 
     x-transition:enter="transition-opacity ease-linear duration-300"
     x-transition:enter-start="opacity-0"
     x-transition:enter-end="opacity-100"
     x-transition:leave="transition-opacity ease-linear duration-300"
     x-transition:leave-start="opacity-100"
     x-transition:leave-end="opacity-0"
     class="fixed inset-0 z-40 bg-black bg-opacity-25"
     style="display: none;"
     @click="cartOpen = false">
</div>
