<script>
    function openQuickViewModal(productData) {
        const modal = document.getElementById('quick-view-modal');
        modal.classList.remove('hidden');
        
        // Populate product data
        if (productData) {
            document.getElementById('quick-view-title').textContent = productData.title || 'Elegant Silk Saree';
            document.getElementById('quick-view-category').textContent = productData.category || 'Traditional Collection';
            document.getElementById('quick-view-price').textContent = productData.price || '₹2,999';
            document.getElementById('quick-view-description').textContent = productData.description || 'This elegant silk saree features traditional motifs and intricate embroidery work.';
            
            if (productData.image) {
                document.getElementById('quick-view-main-image').src = productData.image;
            }
        }
    }

    function closeQuickViewModal() {
        const modal = document.getElementById('quick-view-modal');
        modal.classList.add('hidden');
    }

    function changeMainImage(imageSrc) {
        document.getElementById('quick-view-main-image').src = imageSrc;
        
        // Update border styling
        const thumbnails = document.querySelectorAll('#quick-view-modal .aspect-w-1 button');
        thumbnails.forEach(btn => {
            btn.classList.remove('border-luxury-500');
            btn.classList.add('border-transparent');
        });
        
        // Find and highlight current thumbnail
        event.target.closest('button').classList.remove('border-transparent');
        event.target.closest('button').classList.add('border-luxury-500');
    }

    function addToCart() {
        // Add to cart functionality
        console.log('Added to cart');
