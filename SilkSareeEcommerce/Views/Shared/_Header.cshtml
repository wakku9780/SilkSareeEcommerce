<!-- Header -->
<header class="sticky top-0 z-40 bg-white/80 backdrop-blur-md border-b border-gray-200/50 shadow-sm">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="flex items-center justify-between h-16 lg:h-20">
            
            <!-- Logo -->
            <div class="flex-shrink-0">
                <a asp-controller="Home" asp-action="Index" class="flex items-center space-x-2 group">
                    <div class="w-10 h-10 bg-gradient-to-br from-luxury-500 to-gold-500 rounded-lg flex items-center justify-center group-hover:scale-110 transition-transform duration-300">
                        <svg class="w-6 h-6 text-white" fill="currentColor" viewBox="0 0 24 24">
                            <path d="M12 2L2 7l10 5 10-5-10-5zM2 17l10 5 10-5M2 12l10 5 10-5"/>
                        </svg>
                    </div>
                    <div class="hidden sm:block">
                        <h1 class="text-xl lg:text-2xl font-display font-semibold bg-gradient-to-r from-luxury-600 to-gold-600 bg-clip-text text-transparent">
                            Silk Sarees
                        </h1>
                        <p class="text-xs text-gray-500 -mt-1">Premium Elegance</p>
                    </div>
                </a>
            </div>

            <!-- Desktop Navigation -->
            <nav class="hidden lg:flex items-center space-x-8">
                <a asp-controller="Home" asp-action="Index" 
                   class="text-gray-700 hover:text-luxury-600 px-3 py-2 text-sm font-medium transition-colors duration-200">
                    Home
                </a>
                <a asp-controller="Product" asp-action="Index" 
                   class="text-gray-700 hover:text-luxury-600 px-3 py-2 text-sm font-medium transition-colors duration-200">
                    Collection
                </a>
                <a asp-controller="Category" asp-action="Index" 
                   class="text-gray-700 hover:text-luxury-600 px-3 py-2 text-sm font-medium transition-colors duration-200">
                    Categories
                </a>
                <a asp-controller="Home" asp-action="Privacy" 
                   class="text-gray-700 hover:text-luxury-600 px-3 py-2 text-sm font-medium transition-colors duration-200">
                    About
                </a>
                <a asp-controller="Contact" asp-action="Index" 
                   class="text-gray-700 hover:text-luxury-600 px-3 py-2 text-sm font-medium transition-colors duration-200">
                    Contact
                </a>
            </nav>

            <!-- Right Side Actions -->
            <div class="flex items-center space-x-4">
                
                <!-- Search Button -->
                <button @click="searchOpen = true" 
                        class="p-2 text-gray-600 hover:text-luxury-600 hover:bg-gray-100 rounded-full transition-colors duration-200"
                        aria-label="Search">
                    <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z"/>
                    </svg>
                </button>

                <!-- Wishlist -->
                @if (User.Identity?.IsAuthenticated == true)
                {
                    <a asp-controller="Wishlist" asp-action="Index" 
                       class="p-2 text-gray-600 hover:text-luxury-600 hover:bg-gray-100 rounded-full transition-colors duration-200 relative"
                       aria-label="Wishlist">
                        <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4.318 6.318a4.5 4.5 0 000 6.364L12 20.364l7.682-7.682a4.5 4.5 0 00-6.364-6.364L12 7.636l-1.318-1.318a4.5 4.5 0 00-6.364 0z"/>
                        </svg>
                        <!-- Wishlist Badge -->
                        <span class="absolute -top-1 -right-1 w-4 h-4 bg-luxury-500 text-white text-xs rounded-full flex items-center justify-center">
                            0
                        </span>
                    </a>
                }

                <!-- Cart Button -->
                <button @click="cartOpen = true" 
                        class="p-2 text-gray-600 hover:text-luxury-600 hover:bg-gray-100 rounded-full transition-colors duration-200 relative"
                        aria-label="Shopping cart">
                    <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 3h2l.4 2M7 13h10l4-8H5.4m0 0L7 13m0 0l-2.5 5M7 13l2.5 5m6-5v6a2 2 0 01-2 2H9a2 2 0 01-2-2v-6m8 0V9a2 2 0 00-2-2H9a2 2 0 00-2 2v4.01"/>
                    </svg>
                    <!-- Cart Badge -->
                    <span class="absolute -top-1 -right-1 w-5 h-5 bg-luxury-500 text-white text-xs rounded-full flex items-center justify-center">
                        0
                    </span>
                </button>

                <!-- User Menu -->
                @if (User.Identity?.IsAuthenticated == true)
                {
                    <div class="relative" x-data="{ open: false }">
                        <button @click="open = !open" 
                                class="flex items-center space-x-2 p-2 text-gray-700 hover:text-luxury-600 hover:bg-gray-100 rounded-lg transition-colors duration-200"
                                aria-label="User menu">
                            <div class="w-8 h-8 bg-gradient-to-br from-luxury-400 to-gold-400 rounded-full flex items-center justify-center">
                                <span class="text-white text-sm font-medium">
                                    @User.Identity.Name?.Substring(0, 1).ToUpper()
                                </span>
                            </div>
                            <span class="hidden sm:block text-sm font-medium">@User.Identity.Name</span>
                            <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7"/>
                            </svg>
                        </button>

                        <!-- Dropdown Menu -->
                        <div x-show="open" 
                             @click.away="open = false"
                             x-transition:enter="transition ease-out duration-200"
                             x-transition:enter-start="transform opacity-0 scale-95"
                             x-transition:enter-end="transform opacity-100 scale-100"
                             x-transition:leave="transition ease-in duration-150"
                             x-transition:leave-start="transform opacity-100 scale-100"
                             x-transition:leave-end="transform opacity-0 scale-95"
                             class="absolute right-0 mt-2 w-48 bg-white rounded-lg shadow-lg border border-gray-200 py-2 z-50">
                            
                            @if (User.IsInRole("Admin"))
                            {
                                <a asp-controller="Admin" asp-action="Dashboard" 
                                   class="block px-4 py-2 text-sm text-gray-700 hover:bg-gray-100 hover:text-luxury-600 transition-colors duration-200">
                                    <div class="flex items-center space-x-2">
                                        <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 19v-6a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2a2 2 0 002-2zm0 0V9a2 2 0 012-2h2a2 2 0 012 2v10m-6 0a2 2 0 002 2h2a2 2 0 002-2m0 0V5a2 2 0 012-2h2a2 2 0 012 2v14a2 2 0 01-2 2h-2a2 2 0 01-2-2z"/>
                                        </svg>
                                        <span>Admin Panel</span>
                                    </div>
                                </a>
                            }
                            
                            <a asp-controller="User" asp-action="Index" 
                               class="block px-4 py-2 text-sm text-gray-700 hover:bg-gray-100 hover:text-luxury-600 transition-colors duration-200">
                                <div class="flex items-center space-x-2">
                                    <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"/>
                                    </svg>
                                    <span>Profile</span>
                                </div>
                            </a>
                            
                            <a asp-controller="UserOrder" asp-action="Index" 
                               class="block px-4 py-2 text-sm text-gray-700 hover:bg-gray-100 hover:text-luxury-600 transition-colors duration-200">
                                <div class="flex items-center space-x-2">
                                    <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 11V7a4 4 0 00-8 0v4M5 9h14l1 12H4L5 9z"/>
                                    </svg>
                                    <span>My Orders</span>
                                </div>
                            </a>
                            
                            <hr class="my-2 border-gray-200">
                            
                            <a asp-controller="Account" asp-action="Logout" 
                               class="block px-4 py-2 text-sm text-gray-700 hover:bg-gray-100 hover:text-red-600 transition-colors duration-200">
                                <div class="flex items-center space-x-2">
                                    <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 16l4-4m0 0l-4-4m4 4H7m6 4v1a3 3 0 01-3 3H6a3 3 0 01-3-3V7a3 3 0 013-3h4a3 3 0 013 3v1"/>
                                    </svg>
                                    <span>Logout</span>
                                </div>
                            </a>
                        </div>
                    </div>
                }
                else
                {
                    <a asp-controller="Account" asp-action="Login" 
                       class="hidden sm:inline-flex items-center px-4 py-2 border border-transparent text-sm font-medium rounded-lg text-white bg-luxury-600 hover:bg-luxury-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-luxury-500 transition-colors duration-200">
                        Sign In
                    </a>
                }

                <!-- Mobile Menu Button -->
                <button @click="mobileMenuOpen = !mobileMenuOpen" 
                        class="lg:hidden p-2 text-gray-600 hover:text-luxury-600 hover:bg-gray-100 rounded-lg transition-colors duration-200"
                        aria-label="Toggle mobile menu">
                    <svg x-show="!mobileMenuOpen" class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16"/>
                    </svg>
                    <svg x-show="mobileMenuOpen" class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"/>
                    </svg>
                </button>
            </div>
        </div>

        <!-- Mobile Navigation Menu -->
        <div x-show="mobileMenuOpen" 
             x-transition:enter="transition ease-out duration-200"
             x-transition:enter-start="opacity-0 transform -translate-y-2"
             x-transition:enter-end="opacity-100 transform translate-y-0"
             x-transition:leave="transition ease-in duration-150"
             x-transition:leave-start="opacity-100 transform translate-y-0"
             x-transition:leave-end="opacity-0 transform -translate-y-2"
             class="lg:hidden border-t border-gray-200 py-4">
            
            <nav class="space-y-2">
                <a asp-controller="Home" asp-action="Index" 
                   class="block px-3 py-2 text-base font-medium text-gray-700 hover:text-luxury-600 hover:bg-gray-50 rounded-lg transition-colors duration-200">
                    Home
                </a>
                <a asp-controller="Product" asp-action="Index" 
                   class="block px-3 py-2 text-base font-medium text-gray-700 hover:text-luxury-600 hover:bg-gray-50 rounded-lg transition-colors duration-200">
                    Collection
                </a>
                <a asp-controller="Category" asp-action="Index" 
                   class="block px-3 py-2 text-base font-medium text-gray-700 hover:text-luxury-600 hover:bg-gray-50 rounded-lg transition-colors duration-200">
                    Categories
                </a>
                <a asp-controller="Home" asp-action="Privacy" 
                   class="block px-3 py-2 text-base font-medium text-gray-700 hover:text-luxury-600 hover:bg-gray-50 rounded-lg transition-colors duration-200">
                    About
                </a>
                <a asp-controller="Contact" asp-action="Index" 
                   class="block px-3 py-2 text-base font-medium text-gray-700 hover:text-luxury-600 hover:bg-gray-50 rounded-lg transition-colors duration-200">
                    Contact
                </a>
                
                @if (User.Identity?.IsAuthenticated == false)
                {
                    <hr class="border-gray-200 my-2">
                    <a asp-controller="Account" asp-action="Login" 
                       class="block px-3 py-2 text-base font-medium text-luxury-600 hover:bg-luxury-50 rounded-lg transition-colors duration-200">
                        Sign In
                    </a>
                }
            </nav>
        </div>
    </div>
</header>
