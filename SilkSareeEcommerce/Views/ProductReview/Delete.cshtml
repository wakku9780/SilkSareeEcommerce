@model SilkSareeEcommerce.Models.ProductReview

<h2>Delete Review</h2>
<p>Are you sure you want to delete this review?</p>

<div class="alert alert-danger">
    <strong>@Model.UserName:</strong> @Model.Comment (Rating: @Model.Rating Stars)
</div>

<form asp-action="Delete" method="post">
    <input type="hidden" asp-for="Id" />
    <input type="hidden" asp-for="ProductId" />
    <button type="submit" class="btn btn-danger">Delete</button>
    <a asp-action="Index" asp-route-productId="@Model.ProductId" class="btn btn-secondary">Cancel</a>
</form>
