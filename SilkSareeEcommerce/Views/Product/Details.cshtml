@model SilkSareeEcommerce.Models.Product

<div class="container mt-4">
    <div class="card shadow-lg border-0">
        <div class="card-header bg-dark text-white text-center">
            <h2 class="mb-0">@Model.Name</h2>
        </div>
        <div class="card-body text-center">
            <img src="@Model.ImageUrl" class="img-fluid rounded shadow-sm" alt="@Model.Name" style="max-height: 400px;">
            <p class="mt-3 text-muted">@Model.Description</p>
            <h4 class="text-success fw-bold">₹@Model.Price</h4>
            <span class="badge bg-primary">@Model.Category?.Name</span>
        </div>
        <div class="card-footer text-center">
            <a asp-action="Index" class="btn btn-secondary">
                <i class="fas fa-arrow-left"></i> Back to Products
            </a>
            <a asp-action="AddToCart" asp-route-id="@Model.Id" class="btn btn-primary">
                <i class="fas fa-shopping-cart"></i> Add to Cart
            </a>
            <a asp-action="BuyNow" asp-route-id="@Model.Id" class="btn btn-success">
                <i class="fas fa-bolt"></i> Buy Now
            </a>
        </div>
    </div>
</div>
