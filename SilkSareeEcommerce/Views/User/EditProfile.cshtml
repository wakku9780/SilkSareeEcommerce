@model SilkSareeEcommerce.Models.ApplicationUser

@section Styles {
    <script src="https://cdn.tailwindcss.com"></script>
}

@{
    ViewData["Title"] = "Edit Profile";
}

 

<div class="max-w-2xl mx-auto my-10 bg-white border border-purple-100 rounded-3xl shadow-lg p-8">
    <div class="text-center mb-10">
        <h2 class="text-4xl font-extrabold text-purple-700 mb-2">👤 Edit Your Profile</h2>
        <p class="text-gray-500">Keep your account details up to date for a better experience.</p>
    </div>

    <form asp-action="EditProfile" method="post" class="space-y-6">
        @Html.HiddenFor(model => model.Id)

        <!-- Full Name -->
        <div>
            <label asp-for="FullName" class="block mb-1 font-medium text-gray-700">Full Name</label>
            <input asp-for="FullName" class="w-full px-4 py-3 rounded-xl border border-gray-300 focus:ring-2 focus:ring-purple-400 focus:outline-none" placeholder="Enter full name" />
            <span asp-validation-for="FullName" class="text-red-500 text-sm mt-1"></span>
        </div>

        <!-- Email (Read-only) -->
        <div>
            <label asp-for="Email" class="block mb-1 font-medium text-gray-700">Email</label>
            <input asp-for="Email" readonly class="w-full px-4 py-3 rounded-xl border border-gray-300 bg-gray-100 text-gray-500 cursor-not-allowed" />
            <span asp-validation-for="Email" class="text-red-500 text-sm mt-1"></span>
        </div>

        <!-- Phone -->
        <div>
            <label asp-for="PhoneNumber" class="block mb-1 font-medium text-gray-700">Phone Number</label>
            <input asp-for="PhoneNumber" class="w-full px-4 py-3 rounded-xl border border-gray-300 focus:ring-2 focus:ring-purple-400 focus:outline-none" placeholder="Enter phone number" />
            <span asp-validation-for="PhoneNumber" class="text-red-500 text-sm mt-1"></span>
        </div>

        <!-- Address -->
        <div>
            <label asp-for="Address" class="block mb-1 font-medium text-gray-700">Address</label>
            <textarea asp-for="Address" rows="3" class="w-full px-4 py-3 rounded-xl border border-gray-300 focus:ring-2 focus:ring-purple-400 focus:outline-none" placeholder="Enter address"></textarea>
            <span asp-validation-for="Address" class="text-red-500 text-sm mt-1"></span>
        </div>

        <!-- Submit -->
        <div class="text-center pt-4">
            <button type="submit" class="w-full sm:w-auto bg-purple-600 hover:bg-purple-700 text-white font-semibold py-3 px-8 rounded-xl shadow-md transition-all duration-300">
                ✨ Update Profile
            </button>
        </div>
    </form>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
